{
  "expo": {
    "name": "Avanti",
    "slug": "avanti",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icons/avanti-icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "The app needs access to your photos to let you select profile pictures.",
          "photoPickerPermission": true
        }
      ]
    ],
    "android": {
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ],
      "package": "com.avanti.app"
    },
    "ios": {
      "bundleIdentifier": "com.avanti.app",
      "buildNumber": "1",
      "supportsTablet": false,
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "Avanti needs photo library access to let you choose profile pictures",
        "NSPhotoLibraryAddUsageDescription": "Avanti needs access to save photos"
      },
      "config": {
        "usesAppleSignIn": true
      },
      "icon": "./assets/images/icons/avanti-icon.png"
    },
    "assets": ["./assets/images/*" ]
  }
} 